<%- include('./partials/header')%>

<div class="container">
	<form action="/blog/<%=blog._id%>/?_method=PUT" method="POST">
		<div class=form-group>
			<div class="row">
				<div class="col">
					<input placeholder="Title" class="form-control" type="text" name="title" value="<%=blog.title%>">	
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="row">
				<div class="col">
					<input placeholder="Title Image URL" class="form-control" type="text" name="title_image_url" value="<%=blog.title_image_url%>">
				</div>
				<div class="col">
					<input placeholder="Author" class="form-control" type="text" name="author" value="<%=blog.author%>">
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="row">
				<div class="col">
					<textarea placeholder="Title Description" class="form-control" name="title_description"><%=blog.title_description%></textarea>
				</div>
			</div>
		</div>
		
		
		<div class="content-series">
			<%for(var i =0; i < blog.subData.sub_heading.length; i++){%>
				<div class="content-elements">
					<div class="form-group">
						<div class="row">
							<div class="col">
								<button class="remove-content btn btn-warning" type='button'>Remove Content Series</button>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="row">
							<div class="col">
								<input placeholder="Subheading" class="form-control" type="text" name="subData[sub_heading]" value="<%=blog.subData.sub_heading[i]%>">
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="row">
							<div class="col">
								<textarea class="form-control" placeholder="Blog Text" name="subData[blog_text]"><%=blog.subData.blog_text[i]%></textarea>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="row">
							<div class="col">
								<input class="form-control" placeholder="Image URL" class="form-control" type="text" name="subData[normal_image_url]" value="<%=blog.subData.normal_image_url[i]%>">
							</div>
							<div class="col">
								<label for="center-justify">Center Justify</label>
								<%if(blog.subData.justify[i] === 'center-justify'){%>
									<input class="form-control" id="center-justify" type="radio" name="group1" checked>
								<%}else{%>
									<input class="form-control" id="center-justify" type="radio" name="group1">
								<%}%>
							</div>
							<div class="col">
								<label for="float-left">Float Left</label>
								<%if(blog.subData.justify[i] === 'float-left'){%>
									<input class="form-control" id="float-left" type="radio" name="group1" checked>
								<%}else{%>
									<input class="form-control" id="float-left" type="radio" name="group1">
								<%}%>
							</div>
							<div class="col">
								<label for="float-right">Float Right</label>
								<%if(blog.subData.justify[i] === 'float-right'){%>
									<input class="form-control" id="float-right" type="radio" name="group1" checked>
								<%}else{%>
									<input class="form-control" id="float-right" type="radio" name="group1">
								<%}%>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="row">
							<div class="col">
								<input placeholder="Image Caption" class="form-control" type="text" name="subData[normal_image_caption]" value="<%=blog.subData.normal_image_caption[i]%>">
							</div>
						</div>
					</div>
				</div>
			<%}%>
		</div>
		<div class="form-group">
			<div class="row">
				<div class="col">
					<button class="new-content btn btn-primary" type="button">New Content Series</button>		
				</div>
				<div class="col">
					<input class="form-control btn btn-primary" type="submit" name="">
				</div>
			</div>
		</div>
	</form>
</div>

<script type="text/javascript" src='/scripts/new-blog.js'></script>
<%- include('./partials/footer')%>