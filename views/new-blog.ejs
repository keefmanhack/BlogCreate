<%- include('./partials/header')%>

<div class="container">
	<form action="/new-blog" method="POST">
		<div class=form-group>
			<div class="row">
				<div class="col">
					<input placeholder="Title" class="form-control" type="text" name="title">	
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="row">
				<div class="col">
					<input placeholder="Title Image URL" class="form-control" type="text" name="title_image_url">
				</div>
				<div class="col">
					<input placeholder="Author" class="form-control" type="text" name="author">
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="row">
				<div class="col">
					<textarea placeholder="Title Description" class="form-control" name="title_description"></textarea>
				</div>
			</div>
		</div>
		
		
		<div class="content-series">
			<div class="content-elements">
				<div class="form-group">
					<div class="row">
						<div class="col">
							<button class="remove-content btn btn-warning" type='button'>Remove Content Series</button>
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col">
							<input placeholder="Subheading" class="form-control" type="text" name="subData[sub_heading]">
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col">
							<textarea class="form-control" placeholder="Blog Text" name="subData[blog_text]"></textarea>
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col">
							<input class="form-control" placeholder="Image URL" class="form-control" type="text" name="subData[normal_image_url]">
						</div>
						<div class="col">
							<label for="center-justify">Center Justify</label>
							<input class="form-control" id="center-justify" type="radio" name="group1" checked>
						</div>
						<div class="col">
							<label for="float-left">Float Left</label>
							<input class="form-control" type="radio" name="group1" id="float-left">
						</div>
						<div class="col">
							<label for="float-right">Float Right</label>
							<input class="form-control" type="radio" name="group1" id="float-right">
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col">
							<input placeholder="Image Caption" class="form-control" type="text" name="subData[normal_image_caption]">
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="row">
				<div class="col">
					<button class="new-content btn btn-primary" type="button">New Content Series</button>		
				</div>
				<div class="col">
					<input class="form-control btn btn-primary" type="submit" name="">
				</div>
			</div>
		</div>
	</form>
</div>

<script type="text/javascript" src='/scripts/new-blog.js'></script>
<%- include('./partials/footer')%>